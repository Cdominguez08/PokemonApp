<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cdominguez.pokemons">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokemons"
        android:name=".MyApp">
        <activity
            android:name=".presentation.ui.SplashscreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Pokemons.NoActionBar" />
        <activity android:name=".presentation.ui.PokemonsFavoritesActivity" />
        <activity android:name=".presentation.ui.PokemonDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".presentation.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>